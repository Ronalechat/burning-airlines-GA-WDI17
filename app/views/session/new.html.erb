<div class="container">

  <br>
  <h1>Sign in</h1>
  <br>

<%= form_tag login_path, :class=> "form-inline" do%>
  <div class="form-group">
    <%= label_tag :email %>
    <%= email_field_tag :email, nil, :placeholder => 'example@email.com' %>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <br>

  <div class="checkbox">
    <label>
      <input type="checkbox"> Remember me
    </label>
  </div>
  <br>
  <br>
  <%= submit_tag "Log in" %>

<% end %>
</div>
